---
import Faq from '@components/Faq.astro'
import Interval from '@components/pricing/Interval.astro'
import Newsletter from '@components/Newsletter.astro'

import Free from '@components/pricing/benefits/Free.astro'
import Solo from '@components/pricing/benefits/Solo.astro'
import Team from '@components/pricing/benefits/Team.astro'

import Main from '../../layouts/Main.astro'
---

<Main title="Yearly Pricing - Instellar.app" cover="https://instellar.app/previews/yearly-pricing.jpg">
  <div class="isolate overflow-hidden">
    <div class="flow-root bg-gray-900 pb-16 pt-24 sm:pt-32 lg:pb-0">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <Interval />
        <div class="relative mx-auto mt-10 grid max-w-md grid-cols-1 gap-y-8 lg:mx-0 lg:-mb-14 lg:max-w-none lg:grid-cols-3">
          <svg viewBox="0 0 1208 1024" aria-hidden="true" class="absolute -bottom-48 left-1/2 h-[64rem] -translate-x-1/2 translate-y-1/2 [mask-image:radial-gradient(closest-side,white,transparent)] lg:-top-48 lg:bottom-auto lg:translate-y-0">
            <ellipse cx="604" cy="512" fill="url(#d25c25d4-6d43-4bf9-b9ac-1842a30a4867)" rx="604" ry="512" />
            <defs>
              <radialGradient id="d25c25d4-6d43-4bf9-b9ac-1842a30a4867">
                <stop stop-color="#7775D6" />
                <stop offset="1" stop-color="#E935C1" />
              </radialGradient>
            </defs>
          </svg>
          <div class="hidden lg:absolute lg:inset-x-px lg:bottom-0 lg:top-4 lg:block lg:rounded-t-2xl lg:bg-slate-800/80 lg:ring-1 lg:ring-white/10" aria-hidden="true"></div>
          <div class="relative rounded-2xl bg-slate-800/80 ring-1 ring-white/10 lg:bg-transparent lg:pb-14 lg:ring-0">
            <div class="p-8 lg:pt-12 xl:p-10 xl:pt-14">
              <h3 id="tier-starter" class="text-sm font-semibold leading-6 text-white">Free</h3>
              <div class="flex flex-col gap-6 sm:flex-row sm:items-end sm:justify-between lg:flex-col lg:items-stretch">
                <div class="mt-2 flex items-center gap-x-4">
                  <!-- Price, update based on frequency toggle state -->
                  <p class="text-4xl font-bold tracking-tight text-white">$0</p>
                  <div class="text-sm leading-5">
                    <p class="text-white">USD</p>
                    <!-- Payment frequency, update based on frequency toggle state -->
                    <p class="text-gray-400">Billed yearly</p>
                  </div>
                </div>
                <a href="https://web.instellar.app/auth/registrations/new" aria-describedby="tier-starter" class="rounded-md py-2 px-3 text-center text-sm font-semibold leading-6 text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 bg-white/10 hover:bg-white/20 focus-visible:outline-white">Sign Up</a>
              </div>
              <div class="mt-8 flow-root sm:mt-10">
                <Free />
              </div>
            </div>
          </div>
          <div class="relative rounded-2xl z-10 bg-white shadow-xl ring-1 ring-gray-900/10">
            <div class="p-8 lg:pt-12 xl:p-10 xl:pt-14">
              <h3 id="tier-scale" class="text-sm font-semibold leading-6 text-gray-900">Team</h3>
              <div class="flex flex-col gap-6 sm:flex-row sm:items-end sm:justify-between lg:flex-col lg:items-stretch">
                <div class="mt-2 flex items-center gap-x-4">
                  <!-- Price, update based on frequency toggle state -->
                  <p class="text-4xl font-bold tracking-tight text-gray-900">$20</p>
                  <div class="text-sm leading-5">
                    <p class="text-gray-900">USD / seat / month</p>
                    <!-- Payment frequency, update based on frequency toggle state -->
                    <p class="text-gray-500">Billed yearly</p>
                  </div>
                </div>
                <a href="https://web.instellar.app/auth/registrations/new" aria-describedby="tier-scale" class="rounded-md py-2 px-3 text-center text-sm font-semibold leading-6 text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 bg-purple-600 shadow-sm hover:bg-purple-500 focus-visible:outline-purple-600">Sign Up</a>
              </div>
              <div class="mt-8 flow-root sm:mt-10">
                <Team />
              </div>
            </div>
          </div>
          <div class="relative rounded-2xl bg-gray-800/80 ring-1 ring-white/10 lg:bg-transparent lg:pb-14 lg:ring-0">
            <div class="p-8 lg:pt-12 xl:p-10 xl:pt-14">
              <h3 id="tier-growth" class="text-sm font-semibold leading-6 text-white">Solo</h3>
              <div class="flex flex-col gap-6 sm:flex-row sm:items-end sm:justify-between lg:flex-col lg:items-stretch">
                <div class="mt-2 flex items-center gap-x-4">
                  <!-- Price, update based on frequency toggle state -->
                  <p class="text-4xl font-bold tracking-tight text-white">$10</p>
                  <div class="text-sm leading-5">
                    <p class="text-white">USD / month</p>
                    <!-- Payment frequency, update based on frequency toggle state -->
                    <p class="text-gray-400">Billed yearly</p>
                  </div>
                </div>
                <a href="https://web.instellar.app/auth/registrations/new" aria-describedby="tier-growth" class="rounded-md py-2 px-3 text-center text-sm font-semibold leading-6 text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 bg-white/10 hover:bg-white/20 focus-visible:outline-white">Sign Up</a>
              </div>
              <div class="mt-8 flow-root sm:mt-10">
                <Solo />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="relative bg-slate-50 lg:pt-14">
      <Faq />
    </div>
  </div>
  <Newsletter />
</Main>